# Nomcebo Bank Auth Service - Environment Variables
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ========================================
# Application Settings
# ========================================
SPRING_PROFILES_ACTIVE=dev

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/nomcebo_bank_dev
DB_USERNAME=postgres
DB_PASSWORD=your-database-password-here

# ========================================
# Keycloak Configuration
# ========================================
KEYCLOAK_URL=http://localhost:8090
KEYCLOAK_REALM=nomcebo-bank
KEYCLOAK_CLIENT_ID=nb-auth-service
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret-here

# ========================================
# JWT Configuration
# ========================================
# IMPORTANT: Use a strong random secret (minimum 256 bits)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-very-long-random-secret-key-change-this-in-production

# ========================================
# Security Configuration
# ========================================
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ========================================
# CORS Configuration
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# ========================================
# Email Configuration (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# ========================================
# SSL/TLS Configuration (Production)
# ========================================
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=your-keystore-password-here

# ========================================
# Additional Configuration
# ========================================
# Uncomment and configure as needed

# Server Port
# SERVER_PORT=8080

# Log Level
# LOG_LEVEL=info

# Keycloak Hostname (for production)
# KEYCLOAK_HOSTNAME=keycloak.yourdomain.com
